<h1>User Information</h1>
<%- include('../../partials/messages') %>
<h3><%= userInfo.firstName %> <%= userInfo.lastName %></h3>

<p><strong>Status:</strong> <%= userInfo.active ? 'Active' : 'Inactive' %></p>
<p><strong>Email:</strong> <%= userInfo.email %></p>
<p><strong>Role:</strong> <%= userInfo.role %></p>
<p><strong>Created:</strong> <%= userInfo.createdAt %></p>
<p><strong>Updated:</strong> <%= userInfo.updatedAt %></p>

<form action="/admin/users/status/<%= userInfo.id %>" method="POST">
    <%- include('../../partials/csrf') %>
    <input type="hidden" name="returnTo" value="<%= req.originalUrl %>">
    <button type="submit" <%= userInfo.id == user.id ? 'disabled' : '' %> >
        <%= userInfo.active ? 'Disable' : 'Activate' %>
    </button>
</form>